<h1><%= @cocktail.name %></h1>



<button> <%= link_to 'Add description', new_cocktail_dose_path(@cocktail)%></button>
<button> <%= link_to 'Back to all cocktails', cocktails_path%></button>


<ul>
<% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
      <% end %>
<% end %>
</ul>
